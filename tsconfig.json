{  
  "compilerOptions": {  
  "target": "es6",  
    "module": "commonjs",  
    "rootDir": "src",  
    "outDir": "dist",
  "allowSyntheticDefaultImports": true,  
    "sourceMap": true,  
  "noImplicitAny": true,
  "moduleResolution": "node",
    "resolveJsonModule": true,  
    "lib": ["es6", "dom"],  
    "esModuleInterop": true  
  },  
  "include": [  
    "src/**/*.ts", "src/**/*.js", "test/**/*.ts",
    ".eslintrc.js"
  ],  
  "exclude": [  
    "node_modules"
  ]  
} 